<%- include('admin_header') %>

  <!-- Content wrapper -->
  <div class="content-wrapper">

    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">


      <h4 class="py-3 mb-4">
        <span class="text-muted fw-light">E-Commerce /</span><span class="text-muted fw-light"> Category /</span> View
        Category
      </h4>

      <!-- Product List Table -->
      <div class="card">
        <div class="card-header">
          <h5 class="card-title">Filter</h5>
          <form>
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Search By Category Name" name="search"
                value="<%= search %>" />
              <button class="btn btn-outline-primary waves-effect" type="submit" id="button-addon2">Search</button>
            </div>
          </form>
        </div>
        <div class="card-datatable table-responsive">
          <table class="datatables-products table">
            <thead class="table-light">
              <tr>
                <th></th>
                <th>
                  <label class="form-check-label">
                    <input style="margin: 0 0 -20px 0px; font-size: 30px !important;" class="form-check-input"
                      type="checkbox" id="selectAll" />
                  </label>
                </th>
                <th>category</th>
                <th>status</th>
                <th>actions</th>
              </tr>
            </thead>
            <tbody>
              <% if(categoryData !="" ){ for(let cData of categoryData){ %>
                <tr>
                  <td></td>
                  <td style="padding: 20px;">
                    <label class="form-check-label me-2">
                      <input style="margin: 0 0 -20px 0px;" class="form-check-input checkboxSub" type="checkbox"
                        name="mulDelete[]" value="<%= cData.id %>" />
                    </label>
                  </td>
                  <td>
                    <%= cData.category_name %>
                  </td>
                  <td>
                    <% if(cData.isActive) { %>
                      <a href="/admin/category/deactiveCategory/?id=<%= cData.id %>">
                        <span class="btn btn-sm btn-primary" text-capitalized="">Active</span>
                      </a>
                      <% } else { %>
                        <a href="/admin/category/activeCategory/?id=<%= cData.id %>">
                          <span class="btn btn-sm btn-danger" text-capitalized="">Deactive</span>
                        </a>
                        <% } %>
                  </td>
                  <td>
                    <div class="d-flex align-items-center">
                      <a href="/admin/category/updateCategory/?id=<%= cData.id %>" class="d-inline-block"
                        data-bs-toggle="tooltip" data-bs-title="Edit Category">
                        <span class="border border-2 rounded-circle p-2">
                          <i class="ti-pencil"></i>
                        </span>
                      </a>
                      <a href="/admin/category/deleteCategory/?id=<%= cData.id %>" class="d-inline-block"
                        data-bs-toggle="tooltip" data-bs-title="Delete Category">
                        <span class="border border-2 rounded-circle p-2">
                          <i class="ti-trash"></i>
                        </span>
                      </a>
                  </td>
                </tr>
                <% } %>
                  <tr class="text-center">
                    <td colspan="10">
                      <% if(pageNo> 0){ %>
                        <a href="?page=<%= pageNo - 1 %>&search=<%= search %>" class="btn btn-primary"
                          style="padding: 10px 16px;">
                          < </a>
                            <% } %>
                              <% if(pageNo> 0){ %>
                                <a href="?page=<%= pageNo - 1 %>&search=<%= search %>" class="btn border"
                                  style="padding: 10px 16px;">
                                  <%= pageNo %>
                                </a>
                                <% } %>
                                  <a href="?page=<%= pageNo %>&search=<%= search %>" class="btn btn-primary"
                                    style="padding: 10px 16px;">
                                    <%= pageNo + 1 %>
                                  </a>
                                  <% if(totalDocument> pageNo + 1){ %>
                                    <a href="?page=<%= pageNo + 1 %>&search=<%= search %>" class="btn border"
                                      style="padding: 10px 16px;">
                                      <%= pageNo + 2 %>
                                    </a>
                                    <% } %>
                                      <% if(totalDocument> pageNo + 1){ %>
                                        <a href="?page=<%= pageNo + 1 %>&search=<%= search %>" class="btn btn-primary"
                                          style="padding: 10px 16px;">></a>
                                        <% } %>
                    </td>
                  </tr>
                  <tr>
                    <td colspan="10" class="text-center">
                      <h3 class="my-2">Record not found</h3>
                    </td>
                  </tr>
                  <% } %>
            </tbody>
          </table>
        </div>
      </div>


    </div>
    <!-- / Content -->



    <%- include('admin_footer') %>