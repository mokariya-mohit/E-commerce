<%-include('admin_header')%>
  <!-- Default Basic Forms Start -->
  <div class="pd-20 card-box mb-30">
    <div class="clearfix">
      <div class="pull-left">
        <h4 class="text-blue h4">Add Admin</h4>
      </div>

    </div>
    <form method="post" action="/admin/insertAdminData" enctype="multipart/form-data">
      <div class="form-group row">
        <label class="col-sm-12 col-md-2 col-form-label">Name</label>
        <div class="col-sm-12 col-md-10">
          <input class="form-control" type="text" name="name" />
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-12 col-md-2 col-form-label">Email</label>
        <div class="col-sm-12 col-md-10">
          <input class="form-control" type="email" name="email" />
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-12 col-md-2 col-form-label">Password</label>
        <div class="col-sm-12 col-md-10">
          <input class="form-control" type="password" name="password" />
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-12 col-md-2 col-form-label">Description</label>
        <div class="col-sm-12 col-md-10">
          <input class="form-control" type="text" name="description" />
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-12 col-md-2 col-form-label">Select Gender</label>
        <div class="col-sm-12 col-md-10">
          <div class="form-check-inline form-check">
            <label for="inline-radio1" class="form-check-label d-flex align-items-center mr-2">
              <input type="radio" id="inline-radio1" name="gender" value="male" class="form-check-input">Male
            </label>
            <label for="inline-radio2" class="form-check-label d-flex align-items-center mr-2">
              <input type="radio" id="inline-radio2" name="gender" value="female" class="form-check-input">Female
            </label>
          </div>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-12 col-md-2 col-form-label">Select Hobby</label>
        <div class="col-sm-12 col-md-10">
          <div class="form-check-inline form-check">
            <label for="inline-checkbox1" class="form-check-label d-flex align-items-center mr-2">
              <input type="checkbox" id="inline-checkbox1" name="hobby" value="Reading" class="form-check-input">Reading
            </label>
            <label for="inline-checkbox2" class="form-check-label d-flex align-items-center mr-2">
              <input type="checkbox" id="inline-checkbox2" name="hobby" value="Playing" class="form-check-input">Playing
            </label>
            <label for="inline-checkbox3" class="form-check-label d-flex align-items-center mr-2">
              <input type="checkbox" id="inline-checkbox3" name="hobby" value="Music" class="form-check-input">Music
            </label>
          </div>
        </div>
      </div>

      <% let city=["Surat", "Ahmedabad" , "Rajkot" , "Gandhinagar" , "Vadodara" ] %>
        <div class="form-group row">
          <label for="select" class="col-sm-12 col-md-2 col-form-label">Select City:</label>
          <div class="col-sm-12 col-md-10">
            <select name="city" id="select" class="form-control">
              <option value="">-- Select City --</option>
              <% city.map((v)=>{ %>
                <option value="<%= v %>">
                  <%= v %>
                </option>
                <% }) %>
            </select>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-sm-12 col-md-2 col-form-label">Admin Image</label>
          <div class="col-sm-12 col-md-10">
            <input type="file" class="form-control-file form-control height-auto" name="adminImage" />
          </div>

        </div>
        <div class="card-footer">
          <button type="submit" class="btn btn-primary btn-sm">
            <i class="fa fa-dot-circle-o"></i> Submit
          </button>
          <button type="reset" class="btn btn-danger btn-sm">
            <i class="fa fa-ban"></i> Reset
          </button>
        </div>



    </form>
    <%-include('admin_footer')%>