<%- include('admin_header') %>

    <!-- Content wrapper -->
    <div class="content-wrapper">

        <!-- Content -->

        <div class="container-xxl flex-grow-1 container-p-y">


            <h4 class="py-3 mb-4">
                <span class="text-muted fw-light">E-Commerce /</span><span class="text-muted fw-light"> Product /</span>
                View
                Product
            </h4>

            <!-- Product List Table -->
            <div class="card">
                <h5 class="card-header">Responsive Table</h5>
                <div class="table-responsive text-nowrap">
                    <table class="table">
                        <thead>
                            <tr>

                                <th>Category</th>
                                <th>Subcategory</th>
                                <th>Extracategory</th>
                                <th>Brand</th>
                                <th>Type</th>
                                <th>Product</th>
                                <th>Image</th>
                                <th>Multi Image</th>

                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(productData !="" ){ %>
                                <% for(var pd of productData ){ %>
                                    <tr class="">

                                        <td>
                                            <%=pd.category.category_name%>
                                        </td>
                                        <td>
                                            <%=pd.subcategory.subcategory_name%>
                                        </td>
                                        <td>
                                            <%=pd.extracategory.extraCategory_name%>
                                        </td>
                                        <td>
                                            <%=pd.brandname.brand_name%>
                                        </td>
                                        <td>
                                            <%= pd.typeName.type %>
                                        </td>
                                        <td>
                                            <%= pd.product_title %>
                                        </td>
                                        <td>
                                            <img src="<%=pd.ProductImage %>" height="40" alt="">
                                        </td>
                                        <td>
                                            <div class="mydiv2" style="display: flex;">
                                                <%for(var i=0; i<pd.multipleproductimage.length;i++){%>
                                                    <div class="mydiv" style="position: relative;  margin: 0px 10px;">
                                                        <div style="width: 40px;">
                                                            <img style="position: relative; "
                                                                src="<%=pd.multipleproductimage[i] %>" alt="">

                                                        </div>
                                                    </div>
                                                    <%}%>
                                            </div>

                                        </td>

                                        <%if(pd.IsActive){%>
                                            <td><a href="/admin/product/isActive/<%=pd.id%>" title="IsActive"
                                                    class="badge rounded-pill bg-label-primary me-1"
                                                    style="border-radius: 45%;">Active</i></a></td>
                                            <%} else{%>
                                                <td><a href="/admin/product/deActive/<%=pd.id%>" title="DeActive"
                                                        class="badge rounded-pill bg-label-danger me-1"
                                                        style="border-radius: 45%;">DeActive</a></td>
                                                <%}%>


                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <a href="/admin/product/updateproduct/<%=pd.id%>"
                                                                class="d-inline-block" data-bs-toggle="tooltip"
                                                                data-bs-title="Edit ExtraCategory">
                                                                <span class="border border-2 rounded-circle p-2">
                                                                    <i class="ti-pencil"></i>
                                                                </span>
                                                            </a>
                                                            <a href="/admin/product/deletAdmin/<%=pd.id%>"
                                                                class="d-inline-block" data-bs-toggle="tooltip"
                                                                data-bs-title="Delete ExtraCategory">
                                                                <span class="border border-2 rounded-circle p-2">
                                                                    <i class="ti-trash"></i>
                                                                </span>
                                                            </a>
                                                    </td>
                                                    <% }%>
                                                        <% }else{ %>
                                    <tr>
                                        <div
                                            style="background-color: #fff !important; text-align: center; display: flex; justify-content: center; align-items: center; width: 100%; height: 70px;">
                                            <h4 style="color: #6c757d;">No Record Found</h4>
                                        </div>
                                    </tr>
                                    <% } %>
                                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row" style="margin-right: 0 !important;">
                <div class="col-12">
                    <ul class="pagination pagination-rounded justify-content-center mb-3">
                        <li class="page-item">
                            <% var prevPage=parseInt(currentPage)-1%>
                                <% if(prevPage>=0){%>
                                    <a class="page-link" href="?page=<%=prevPage%>" aria-label="Previous">
                                        <span aria-hidden="true">«</span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <%}%>
                        </li>
                        <%for (var i=0; i<totaldocument; i++){%>
                            <li class="page-item <%if(currentPage==i){%> <%='active'%> <%}%>"><a class="page-link"
                                    href="?page=<%=i%>&search=<%=searchValue%>">
                                    <%=i+1%>
                                </a></li>
                            <%}%>
                                <% var nextPage=parseInt(currentPage)+1%>
                                    <li class="page-item">
                                        <% if (totaldocument>nextPage){%>
                                            <a class="page-link" href="?page=<%=nextPage%>" aria-label="Next">
                                                <span aria-hidden="true">»</span>
                                                <span class="sr-only">Next</span>
                                            </a>
                                            <%}%>
                                    </li>
                    </ul>
                </div> <!-- end col-->
            </div>
            <!-- / Content -->

            <%- include('admin_footer') %>